/** @define extensions; */
/* #declare radius; */
%radius-circle {
  border-radius: 50%;
}

%radius-100px {
  border-radius: 100px;
}

%radius-3px {
  border-radius: 3px;
}

%radius-15px {
  border-radius: 15px;
}

/* #declare flexbox layout; */

%align-row {
  display: flex;
  flex-direction: row;
}

%align-row-rev {
  display: flex;
  flex-direction: row-reverse;
}

%align-col {
  display: flex;
  flex-direction: column;
}

%align-col-rev {
  display: flex;
  flex-direction: column-reverse;
}

%align-items-center {
  align-items: center;
}

%justify-content-center {
  justify-content: center;
}

%row-flex-center-center {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

%col-flex-center-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

%center {
  display: flex;
  margin: 0 auto;
}

/* #declare text behaviour; */
%not-appear {
  appearance: none;
  background: none;
  overflow: hidden;
  outline: none;
  border: none;
}

%not-selective {
  -webkit-tap-highlight-color: transparent;
  -webkit-touch-callout: none;
  user-select: none;
}

%selective {
  -webkit-tap-highlight-color: initial;
  -webkit-touch-callout: initial;
  user-select: initial;
}

%ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

%img-alt {
  display: block;
  color: transparent;
  background: url('data:image/png;base64,') no-repeat center center transparent;
  background-size: 25px 25px;
  @extend %not-selective;
}

/* #declare positioning */
%position-relative {
  position: relative;
}

%position-absolute {
  position: absolute;
}

%position-c-c {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

%position-f-w {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

/* #declare motion speed ; */
%motion-fast {
  transition: all 150ms;
}

%motion-mid {
  transition: all 350ms;
}

%motion-slow {
  transition: all 550ms;
}

%motion-very-slow {
  transition: all 1500ms;
}

/** #declare matrix rotation and flip; */
%turn-left {
  transform: matrix(0, -1, 1, 0, 0, 0);
}

%turn-right {
  transform: matrix(0, 1, -1, 0, 0, 0);
}

%no-flip {
  transform: matrix(1, 0, 0, 1, 0, 0);
}

%flip {
  transform: matrix(-1, 0, 0, -1, 0, 0);
}

%flip-ver {
  transform: matrix(-1, 0, 0, 1, 0, 0);
}

%flip-hor {
  transform: matrix(1, 0, 0, -1, 0, 0);
}


